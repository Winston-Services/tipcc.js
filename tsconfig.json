{
  "compilerOptions": {
    // Type checking
    "alwaysStrict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strict": true,
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": true,

    // Emit
    "outDir": "./lib",
    "target": "ES2022",
    "declaration": true,
    "declarationMap": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,

    // Modules
    "module": "CommonJS",
    "moduleResolution": "node16",
    "esModuleInterop": true,

    // Various
    "lib": ["ES2022"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "ts-node": {
    "preferTsExts": true,
  }
}
